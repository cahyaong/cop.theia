<UserControl
    x:Class="Cop.Theia.Module.Diagnostic.ModuleSummaryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cop.Theia.Module.Diagnostic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:ModuleSummaryViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <DataGrid
        Name="AssemblyVms"
        AutoGenerateColumns="False"
        IsReadOnly="True"
        d:DataContext="{d:DesignInstance local:AssemblyViewModel}">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
            <DataGridTextColumn Binding="{Binding Version}" Header="Version" />
            <DataGridTextColumn Binding="{Binding ModifiedTimestamp}" Header="Modified" />
            <DataGridTextColumn Binding="{Binding FileName}" Header="Filename" />
            <DataGridTextColumn Binding="{Binding Configuration}" Header="Configuration" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
