<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:core="clr-namespace:nGratis.Cop.Theia.Core;assembly=nGratis.Cop.Theia.Core"
  xmlns:wpf="clr-namespace:nGratis.Cop.Theia.Core.Wpf;assembly=nGratis.Cop.Theia.Core.Wpf">
  <ResourceDictionary.MergedDictionaries>
    <core:SharedResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/Button.xaml" />
  </ResourceDictionary.MergedDictionaries>
  <Style
    x:Key="{x:Type wpf:FileDialogButton}"
    BasedOn="{StaticResource {x:Type Button}}"
    TargetType="wpf:FileDialogButton" />
  <Style
    x:Key="Cop.FileDialogButton.Normal"
    BasedOn="{StaticResource {x:Type wpf:FileDialogButton}}"
    TargetType="{x:Type wpf:FileDialogButton}">
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="FontFamily" Value="Segoe UI Semilight" />
    <Setter Property="FontSize" Value="11pt" />
    <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
    <Setter Property="Padding" Value="5,2" />
  </Style>
</ResourceDictionary>