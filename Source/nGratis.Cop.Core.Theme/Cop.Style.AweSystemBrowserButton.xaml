<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:core="http://schemas.ngratis.com/2014/core">
  <ResourceDictionary.MergedDictionaries>
    <core:SharedResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/Button.xaml" />
  </ResourceDictionary.MergedDictionaries>
  <Style
    x:Key="{x:Type core:AweSystemBrowserButton}"
    BasedOn="{StaticResource {x:Type Button}}"
    TargetType="core:AweSystemBrowserButton" />
  <Style
    x:Key="Cop.AweSystemBrowserButton.Normal"
    BasedOn="{StaticResource {x:Type core:AweSystemBrowserButton}}"
    TargetType="{x:Type core:AweSystemBrowserButton}">
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="FontFamily" Value="Segoe UI Semilight" />
    <Setter Property="FontSize" Value="11pt" />
    <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
    <Setter Property="Padding" Value="5,2" />
  </Style>
</ResourceDictionary>